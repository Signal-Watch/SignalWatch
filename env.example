# Companies House API Key
COMPANIES_HOUSE_API_KEY=your_key

# Optional: AI API Keys for advanced PDF text extraction
# Use XAI (Grok) - Faster and more cost-effective
XAI_API_KEY=xai-your_key
AI_PROVIDER=xai
XAI_MODEL=grok4

# Or use OpenAI (alternative)
OPENAI_API_KEY=your_openai_key_here

# Optional: OpenCorporates API Key
OPENCORPORATES_API_KEY=your_opencorporates_key_here

# GitHub Personal Access Token (for pushing scan results)
# Create at: https://github.com/settings/tokens
# Required permissions: repo (Full control of private repositories)
GITHUB_TOKEN=your_github_personal_access_token_here

# Rate limiting (requests per 5 minutes)
RATE_LIMIT_REQUESTS=600
RATE_LIMIT_PERIOD=300

# Flask configuration
FLASK_SECRET_KEY=change_this_to_random_string
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Data storage
DATA_DIR=./data
CACHE_DIR=./cache
EXPORTS_DIR=./exports
